{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run on my robot",
            "dependsOn": [
                "Write my robot name to current_robot_name.py",
            ],
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pybricksdev",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/pybricksdev.exe"
            },
            "args": [
                "run",
                "ble",
                "--name",
                "${config:fllRobotName}",
                "${file}"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Run master_program.py on my robot",
            "dependsOn": [
                "Write my robot name to current_robot_name.py",
            ],
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pybricksdev",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/pybricksdev.exe"
            },
            "args": [
                "run",
                "ble",
                "--name",
                "${config:fllRobotName}",
                "master_program.py"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "git pull on startup",
            "type": "shell",
            "command": "python ${workspaceFolder}/.vscode/gitpull.py",
            "windows": {
                "command": "python ${workspaceFolder}\\.vscode\\gitpull.py"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Run on alt robot",
            "dependsOn": [
                "Write alt robot name to current_robot_name.py",
            ],
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pybricksdev",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/pybricksdev.exe"
            },
            "args": [
                "run",
                "ble",
                "--name",
                "${input:robotName}",
                "${file}"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Run master_program.py on alt robot",
            "dependsOn": [
                "Write alt robot name to current_robot_name.py",
            ],
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pybricksdev",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/pybricksdev.exe"
            },
            "args": [
                "run",
                "ble",
                "--name",
                "${input:robotName}",
                "master_program.py"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*)File(.*)(C:(.*)\\.py)(.*)(line(\\s*))([0-9]+),",
                    "file": 3,
                    "line": 8
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Write my robot name to current_robot_name.py",
            "type": "shell",
            "command": "echo '# Autogenerated file. Do not edit.\nROBOT_NAME = \"${config:fllRobotName}\"' > ${workspaceFolder}/current_robot_name.py",
            "windows": {
                "command": "echo '# Autogenerated file. Do not edit.\nROBOT_NAME = \"${config:fllRobotName}\"' > ${workspaceFolder}/current_robot_name.py",
            },
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": []
        },
        {
            "label": "Write alt robot name to current_robot_name.py",
            "type": "shell",
            "command": "echo '# Autogenerated file. Do not edit.\nROBOT_NAME = \"${input:robotName}\"' > ${workspaceFolder}\\current_robot_name.py",
            "windows": {
                "command": "echo '# Autogenerated file. Do not edit.\nROBOT_NAME = \"${input:robotName}\"' > ${workspaceFolder}\\current_robot_name.py",
            },
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "robotName",
            "description": "Which Robot?",
            "options": [
                "Cuddles",
                "RobBot",
                "Pez"
            ]
        }
    ]
}
